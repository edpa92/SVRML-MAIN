<Window x:Class="SVRML.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SVRML"
        mc:Ignorable="d"
        Title="Window1" Height="554.332" Width="569.554" Loaded="Window_Loaded">
    <Grid>
        <ListView x:Name="myListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID}" Width="50" />
                    <GridViewColumn Header="Repaire Date" DisplayMemberBinding="{Binding Repair_Date}" Width="150" />
                    <GridViewColumn Header="Milage" DisplayMemberBinding="{Binding Milage}" Width="80" />
                    <GridViewColumn Header="Remarks" DisplayMemberBinding="{Binding Remarks}" Width="300" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
