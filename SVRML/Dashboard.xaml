<Window x:Class="SVRML.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SVRML"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Dashboard" Height="616.4" Width="1053.1" WindowStartupLocation="CenterScreen">


    <Grid Margin="0,1,-1,0.4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="352*"/>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="573*"/>
            <ColumnDefinition Width="57*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dataGridTab" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Height="520" Width="130" SelectionChanged="dataGridTab_SelectionChanged" FontSize="24" FontWeight="Bold" FontFamily="Franklin Gothic Heavy"/>
        <Button x:Name="buttonAddVehicle" Content="Add New Vehicle" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="130" Height="30" Click="buttonAddVehicle_Click"/>
    </Grid>
</Window>
